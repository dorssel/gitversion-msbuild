<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- Renormalize the boolean. -->
    <UseDorsselGitVersionMsBuild Condition="'$(UseDorsselGitVersionMsBuild)' != 'true'">false</UseDorsselGitVersionMsBuild>

    <GitVersionOverrideAssemblyFile Condition="'$(GitVersionOverrideAssemblyFile)' == ''">$(MSBuildThisFileDirectory)..\tools\netstandard2.0\Dorssel.GitVersion.MsBuild.dll</GitVersionOverrideAssemblyFile>
  </PropertyGroup>

  <UsingTask TaskName="GetVersion" AssemblyFile="$(GitVersionOverrideAssemblyFile)" Condition="$(UseDorsselGitVersionMsBuild)" Override="true" />

  <Target Name="UseDorsselGitVersionMsBuild" BeforeTargets="GetVersion">
    <Message Importance="low" Text="Using Dorssel.GitVersion.MsBuild, because you are building a WiX project in Visual Studio." Condition="$(UseDorsselGitVersionMsBuild)" />
    <Message Importance="low" Text="Not using Dorssel.GitVersion.MsBuild, because it isn't needed." Condition="!$(UseDorsselGitVersionMsBuild)" />
  </Target>
</Project>

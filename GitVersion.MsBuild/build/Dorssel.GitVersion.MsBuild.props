<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Only need to override for WiX projects built with Visual Studio. -->
    <UseDorsselGitVersionMsBuild Condition="'$(UseDorsselGitVersionMsBuild)' == '' And '$(WixPropsImported)' == 'true' And '$(MSBuildRuntimeType)' == 'Full'">true</UseDorsselGitVersionMsBuild>
    <!-- Normalize the boolean. -->
    <UseDorsselGitVersionMsBuild Condition="'$(UseDorsselGitVersionMsBuild)' != 'true'">false</UseDorsselGitVersionMsBuild>

    <!-- These are not supported (nor are they needed for WiX). -->
    <WriteVersionInfoToBuildLog>false</WriteVersionInfoToBuildLog>
    <GenerateGitVersionInformation>false</GenerateGitVersionInformation>
    <UpdateAssemblyInfo>false</UpdateAssemblyInfo>
  </PropertyGroup>
</Project>
